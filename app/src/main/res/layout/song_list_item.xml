<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_song_image"
        android:layout_width="@dimen/list_height"
        android:layout_height="@dimen/list_height"
        android:src="@drawable/music" />

    <LinearLayout
        android:id="@+id/list_song_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_16">

        <TextView
            android:id="@+id/list_song_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_song_name_height"
            android:layout_weight="1"
            android:gravity="bottom"
            tools:text="Name of the song" />

        <TextView
            android:id="@+id/list_singer_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_singer_name_height"
            android:layout_weight="1"
            android:gravity="top"
            tools:text="Singer" />

    </LinearLayout>

</LinearLayout>