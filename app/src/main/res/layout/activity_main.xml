<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sandesh.android.mymusicplayer.MainActivity">

    <include
        android:id="@+id/home_songs"
        layout="@layout/song_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_song_height"
        android:layout_weight="7" />

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_bar_height"
        android:background="@color/home_bar_color"
        android:paddingLeft="@dimen/padding_16"
        android:paddingRight="@dimen/padding_16">

        <TextView
            android:id="@+id/home_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin_16"
            android:text="Song Currently Playing" />

        <TextView
            android:id="@+id/home_singer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_song_name"
            android:layout_marginTop="@dimen/margin_8"
            android:text="Singer" />

        <ImageButton
            android:id="@+id/previous_button"
            android:layout_width="@dimen/button_dimen"
            android:layout_height="@dimen/button_dimen"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/button_margin"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:src="@drawable/baseline_skip_previous_white_48dp" />

        <ImageButton
            android:id="@+id/play_button"
            android:layout_width="@dimen/play_button_dimen"
            android:layout_height="@dimen/play_button_dimen"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/button_margin"
            android:layout_toRightOf="@+id/previous_button"
            android:background="@null"
            android:src="@drawable/baseline_play_circle_outline_white_48dp" />

        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="@dimen/button_dimen"
            android:layout_height="@dimen/button_dimen"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/button_margin"
            android:layout_toRightOf="@+id/play_button"
            android:background="@null"
            android:src="@drawable/baseline_skip_next_white_48dp" />

    </RelativeLayout>

</LinearLayout>
